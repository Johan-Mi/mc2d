let scale = 200
let tile-size = 16

sprite Main {
    fn initialize-renderer() {
        hide()
        erase-all()
        set-size(to: scale)
    }

    fn render() {
        for y world-height() {
            for x world-width() {
                set-costume(to: tile-at(x: x, y: y))
                go-to(x: x * tile-size, y: y * tile-size)
                stamp()
            }
        }
    }
}
