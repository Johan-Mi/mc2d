import "camera.sc2"
import "hotbar.sc2"
import "rendering.sc2"
import "textures.sc2"
import "world.sc2"

sprite Main {
    fn when-flag-clicked {
        initialize-renderer()
        create-world()
        initialize-camera()
        let Δt = 0
        forever {
            update-camera(Δt)
            render()
            &Δt = timer()
            reset-timer()
        }
    }
}
