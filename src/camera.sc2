sprite Main {
    let cam-x = 0
    let cam-y = 0

    fn initialize-camera() {
        &cam-x = 0
        &cam-y = 0
    }

    fn update-camera(_ Δt: Num) {
        &cam-x = cam-x + 2 * Δt
    }

    inline fn cam-x() -> Num {
        cam-x
    }

    inline fn cam-y() -> Num {
        cam-y
    }
}
